<%- layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3" >
    <div class="col-8 offset-2">    <!--shift a column to the right by a 2 number of column this is 12 coloumn grid system-->
      <h3>Edit this Listing</h3>
      <br/>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="input" class="form-label">Title </label>
            <input name="listing[title]" value="<%= listing.title %>" type="text"
            class="form-control" required/>  <!--here listing is object and title is key -->
                                    <!-- add typed value is value of title key -->
            <div class="invalid-feedback">Title should be valid</div>
        </div>
        
        <div class="mb-3">
            <label for="input" class="form-label">Description  </label>
            <textarea name="listing[description]"  class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mb-3">
          Original Image  <br>                                   
          <img src="<%= OriginalImageUrl %>"/>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image </label>                                             <!--here  in listing object title key is added-->
          <input name="listing[image]" class="form-control" type="file"/> 
        </div>  
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="input" class="form-label">Price </label>
                <input name="listing[price]" value="<%= listing.price %>"class="form-control" 
                type="number" required/>  <!--here  in listing object location key is added-->
                <div class="invalid-feedback">Price required</div>
            </div> 
            
            <div class="mb-3 col-md-8">
                <label for="input" class="form-label">Country  </label>
                <input name="listing[country]" value="<%= listing.country %>" class="form-control" 
                type="text" required/>  <!--here  in listing object country key is added-->
                <div class="invalid-feedback">Enter valid country name</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="input" class="form-label">Location  </label>
            <input name="listing[location]" value="<%= listing.location %>" 
            class="form-control" type="text" required/>  <!--here  in listing object location key is added-->
            <div class="invalid-feedback">Location should be valid</div>
        </div> 

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br/><br/><br/><br/>
      </form>
    </div>
  </div>
</body>
