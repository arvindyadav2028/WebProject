<%- layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">    <!--shift a column to the right by a 2 number of column this is 12 coloumn grid system-->
      <br/>
      <h3>Add new Listing</h3>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="input" class="form-label">Title </label>
            <input name="listing[title]" placeholder="Add catchy title" type="text"
            class="form-control" required/>  <!--here listing is object and title is key -->
                                    <!-- add typed value is value of title key -->
                          
            <div class="invalid-feedback">Title Required</div>                        
        </div>
        
        <div class="mb-3">
            <label for="input" class="form-label">Description  </label>
            <textarea name="listing[description]" 
            placeholder="Write description about the post" 
            class="form-control"></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image URL/Link </label>                                             <!--here  in listing object title key is added-->
            <input name="listing[image]" class="form-control" 
            type="file"> <!--here  in listing object image key is added--> 
        </div>  
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="input" class="form-label">Price </label>
                <input name="listing[price]" 
                    placeholder="Enter Price" 
                    class="form-control" 
                    type="text" required
                />  <!--here  in listing object location key is added-->
                <div class="invalid-feedback">Price Required</div>
            </div> 
            
            <div class="mb-3 col-md-8">
                <label for="input" class="form-label">Country  </label>
                <input name="listing[country]" placeholder="Enter country" 
                class="form-control" type="text" required/>  <!--here  in listing object country key is added-->
                <div class="invalid-feedback">Country Required</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="input" class="form-label">Location  </label>
            <input name="listing[location]" placeholder="Enter location" 
            class="form-control" type="text" required/>  <!--here  in listing object location key is added-->
            <div class="invalid-feedback">Location Required</div>
        </div> 

        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br/><br/><br/><br/>
      </form>
    </div>
  </div>
</body>