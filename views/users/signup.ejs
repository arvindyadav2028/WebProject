<%- layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3 mb-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate> <!-- novalidate to stop actions performed by browser automaticaly -->
            <div class="mb-3">
                <label for="input" class="form-label">Username</label>
                <input 
                name="username" 
                id="username"
                type="text"
                class="form-control"
                required
            />
            </div>
            <div class="mb-3">
                <label for="input" class="form-label">Email</label>
                <input 
                name="email" 
                id="email"
                type="text"
                class="form-control"
                required
            />
            </div>
            <div class="mb-3">
                <label for="input" class="form-label">Password</label>
                <input 
                name="password" 
                id="password"
                type="password"
                class="form-control"
                required
            />
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>